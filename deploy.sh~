#!/bin/bash
TARGET=./test
BASE=/epics/base
CORE=/epics/support4c/areaDetector/ADCore
EPICS=/epics/support4c

mkdir -p $TARGET
cd $TARGET
mkdir areaDetector
mkdir asyn
mkdir autosave
mkdir base
mkdir busy
mkdir calc
mkdir devIocStats
mkdir sscan

cp --parents -r -n $BASE/bin ./base

cp -r -n $CORE/bin ./areaDetector
cp -r -n $CORE/db ./areaDetector
cp -r -n $CORE/documentation ./areaDetector
cp -r -n $CORE/iocBoot ./areaDetector
cp -r -n $CORE/Viewers ./areaDetector
cp -r -n $CORE/ADApp/Db ./areaDetector
cp -r -n $CORE/ADApp/op ./areaDetector

cp -r -n $EPICS/asyn/bin ./asyn
cp -r -n $EPICS/asyn/db ./asyn
cp -r -n $EPICS/asyn/opi ./asyn

cp -r -n $EPICS/autosave/asApp/Db ./autosave
cp -r -n $EPICS/autosave/asApp/op ./autosave
cp -r -n $EPICS/autosave/bin ./autosave

cp -r -n $EPICS/busy/busyApp/Db ./busy
cp -r -n $EPICS/busy/busyApp/op ./busy

cp -r -n $EPICS/calc/calcApp/Db ./calc
cp -r -n $EPICS/calc/calcApp/op ./calc

cp -r -n $EPICS/devIocStats/bin ./devIocStats
cp -r -n $EPICS/devIocStats/db ./devIocStats
cp -r -n $EPICS/devIocStats/op ./devIocStats

cp -r -n $EPICS/sscan/sscanApp/Db ./sscan
cp -r -n $EPICS/sscan/sscanApp/op ./sscan





